{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="panel">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="panel-title">ACESSO AO SISTEMA</h1>
                    <form action="{{ route('auth.login') }}" method="post">
                        <div class="form-group">
                            <label for="" class="control-label">E-mail</label>
                            <input type="text" class="form-control" placeholder="E-mail" name="name" value="{{ user.email }}">
                        </div>
                        <div class="form-group">
                            <label for="" class="control-label">Senha</label>
                            <input type="password" class="form-control" placeholder="Senha" name="password" value="{{ user.password }}">
                        </div>
                        <button type="submit" class="bt bt-light hvr-back-pulse">
                            <i class="fas fa-sign-in-alt"></i> ACESSAR</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}